<UserControl
    x:Class="TradeOps.View.UserControlView.DashboardUserControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:livecharts="clr-namespace:LiveChartsCore;assembly=LiveChartsCore"
    xmlns:livecharts1="clr-namespace:LiveChartsCore.SkiaSharpView;assembly=LiveChartsCore.SkiaSharpView"
    xmlns:local="clr-namespace:TradeOps.View.UserControlView"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="4050"
    d:DesignWidth="800"
    Background="White"
    FontFamily="{materialDesign:MaterialDesignFont}"
    mc:Ignorable="d">
    <!--  d:DesignHeight="450"  -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10" Background="White">
            <!--  title  -->
            <TextBlock
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                FontWeight="Bold"
                Text="Dashboard" />
            <!--  Info Section  -->


            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Sale Overview" />

                            <!--  Sale Section  -->



                            <!--  total sale card  -->
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding TotalSales, StringFormat=N0}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Total Sales" />
                                    </Grid>
                                </materialDesign:Card>

                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding TotalProfit, StringFormat=N0}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Total Profit" />
                                    </Grid>
                                </materialDesign:Card>
                            </StackPanel>

                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <!--  Product Section  -->
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Product Overview" />

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding TotalProducts}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Total Product" />
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding LowStockProducts}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Low Stock Product" />
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding OutOfStockProducts}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Out of Stock Product" />
                                    </Grid>
                                </materialDesign:Card>
                            </StackPanel>

                        </StackPanel>

                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <!--  Order Section  -->
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Order Overview" />

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding TotalOrders}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Total Order" />
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding PendingOrders}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Pending Order" />
                                    </Grid>
                                </materialDesign:Card>
                            </StackPanel>

                        </StackPanel>
                        <StackPanel Grid.Column="2">

                            <!--  Invoice Section  -->
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Invoie Overview" />

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding TotalInvoices}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Total Invoice " />
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding CompletedInvoices}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Completed Invoice" />
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card
                                    Width="180"
                                    Height="120"
                                    Margin="12"
                                    Padding="16"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    materialDesign:ElevationAssist.Elevation="Dp8"
                                    materialDesign:UniformCornerRadius="20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <!--  Centered Value  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Bottom Text  -->
                                        </Grid.RowDefinitions>

                                        <!--  Centered Value  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            FontWeight="Bold"
                                            Text="{Binding PendingInvoices}" />

                                        <!--  Bottom Label  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="18"
                                            Foreground="Gray"
                                            Text="Pending Invoice" />
                                    </Grid>
                                </materialDesign:Card>
                            </StackPanel>
                        </StackPanel>


                    </Grid>











                    <!--  Customer Section  -->
                    <TextBlock
                        Margin="10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Customer Overview" />



                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <!--  data Customer by sale  -->
                        <StackPanel Grid.Column="0">
                            <TextBlock
                                Margin="10"
                                FontSize="18"
                                FontWeight="Medium"
                                Text="Top 10 Customers by Sales" />

                            <DataGrid
                                Grid.Row="2"
                                Width="Auto"
                                Height="auto"
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                FontSize="18"
                                HeadersVisibility="Column"
                                ItemsSource="{Binding TopCustomersBySalesWithSrNo}">

                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Binding="{Binding SrNo}"
                                        FontSize="18"
                                        Header="Sr No" />
                                    <DataGridTextColumn
                                        Binding="{Binding CustomerName}"
                                        FontSize="18"
                                        Header="Customer Name" />
                                    <DataGridTextColumn
                                        Binding="{Binding TotalSale, StringFormat=N0}"
                                        FontSize="18"
                                        Header="Total Sales" />
                                </DataGrid.Columns>
                            </DataGrid>


                        </StackPanel>



                        <StackPanel Grid.Column="2">
                            <TextBlock
                                Margin="10"
                                FontSize="18"
                                FontWeight="Medium"
                                Text="Top 10 Customers by Profit" />

                            <DataGrid
                                Grid.Row="2"
                                Width="Auto"
                                Height="auto"
                                Margin="10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                FontSize="18"
                                HeadersVisibility="Column"
                                ItemsSource="{Binding TopCustomersByProfitWithSrNo}">

                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Binding="{Binding SrNo}"
                                        FontSize="18"
                                        Header="Sr No" />
                                    <DataGridTextColumn
                                        Binding="{Binding CustomerName}"
                                        FontSize="18"
                                        Header="Customer Name" />
                                    <DataGridTextColumn
                                        Binding="{Binding TotalProfit, StringFormat=N0}"
                                        FontSize="18"
                                        Header="Total Profit" />
                                </DataGrid.Columns>
                            </DataGrid>


                        </StackPanel>

                    </Grid>

                    <!--  chart / graps  -->

                    <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto">
                        <StackPanel
                            Margin="20"
                            HorizontalAlignment="Stretch"
                            Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <!--<ComboBox
                                    Width="120"
                                    Margin="0,0,0,10"
                                    ItemsSource="{Binding Ranges}"
                                    SelectedItem="{Binding SelectedRange}" />-->
                                <TextBlock
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Text="Sales Over Time " />
                                <lvc:CartesianChart
                                    Width="500"
                                    Height="450"
                                    FontSize="18"
                                    Series="{Binding SalesSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}" />



                            </StackPanel>

                            <StackPanel>
                                <!--<ComboBox
                                    Width="120"
                                    Margin="0,0,0,10"
                                    ItemsSource="{Binding Ranges}"
                                    SelectedItem="{Binding SelectedRange}" />-->
                                <TextBlock
                                    Margin="10"
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Text="Profit Over Time " />
                                <lvc:CartesianChart
                                    Width="500"
                                    Height="450"
                                    FontSize="18"
                                    Series="{Binding ProfitSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}" />


                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </ScrollViewer>
</UserControl>
