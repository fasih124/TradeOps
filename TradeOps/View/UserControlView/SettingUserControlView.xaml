<UserControl
    x:Class="TradeOps.View.UserControlView.SettingUserControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.UserControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    FontFamily="{materialDesign:MaterialDesignFont}"
    mc:Ignorable="d">
    <StackPanel Margin="20" Orientation="Vertical">
        <!--  Title  -->
        <TextBlock
            Margin="0,0,0,20"
            FontSize="32"
            FontWeight="Bold"
            Text="Setting" />

        <!--  Buttons with description  -->
        <StackPanel Orientation="Vertical">
            <!--  Import  -->
            <StackPanel Margin="20" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,80,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="Load previous data: " />
                <Button Width="120" Content="Import Data" />

            </StackPanel>

            <!--  Export  -->
            <StackPanel Margin="20" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,85,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="Backup your data: " />
                <Button Width="120" Content="Export Data" />

            </StackPanel>

            <!--  Reset  -->
            <StackPanel Margin="20" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,100,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="Delete all data: " />
                <Button
                    Width="120"
                    Background="#FFFF7272"
                    BorderBrush="#FFFF7575"
                    Content="Reset" />

            </StackPanel>
        </StackPanel>
    </StackPanel>

</UserControl>
