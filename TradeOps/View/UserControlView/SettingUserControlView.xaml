<UserControl
    x:Class="TradeOps.View.UserControlView.SettingUserControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.UserControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    FontFamily="{materialDesign:MaterialDesignFont}"
    mc:Ignorable="d">
    <StackPanel Margin="20" Orientation="Vertical">
        <!--  Title  -->
        <TextBlock
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="Bold"
            Text="Setting" />

        <!--  Buttons with description  -->
        <StackPanel Orientation="Vertical">
            <!--  Import  -->
            <StackPanel Margin="20" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,80,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Medium"
                    Text="Load previous data: " />
                <Button
                    Width="150"
                    Click="ImportButton_Click"
                    Content="Import Data"
                    FontSize="18"
                    Foreground="white" />

            </StackPanel>

            <!--  Export  -->
            <StackPanel Margin="20" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,92,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Medium"
                    Text="Backup your data: " />
                <Button
                    Width="150"
                    Click="ExportButton_Click"
                    Content="Export Data"
                    FontSize="18"
                    Foreground="White" />

            </StackPanel>

            <!--  Reset  -->
            <StackPanel Margin="20" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,118,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Medium"
                    Text="Delete all data: " />
                <Button
                    Width="150"
                    Background="#FFFF7272"
                    BorderBrush="#FFFF7575"
                    Click="ResetButton_Click"
                    Content="Reset"
                    FontSize="18"
                    Foreground="White" />

            </StackPanel>
        </StackPanel>
    </StackPanel>

</UserControl>
