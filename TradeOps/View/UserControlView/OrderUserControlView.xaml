<UserControl
    x:Class="TradeOps.View.UserControlView.OrderUserControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.UserControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="{materialDesign:MaterialDesignFont}"
    mc:Ignorable="d">
    <Border
        Margin="20"
        Padding="10"
        Background="{DynamicResource MaterialDesignPaper}"
        CornerRadius="6">
        <Grid Background="{DynamicResource MaterialDesignPaper}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  ===================Row 0============================================  -->
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="32"
                Text="Orders" />

            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="5"
                Command="{Binding DeleteOrderCommand}"
                Content="Delete Selected Order" />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="5"
                Command="{Binding EditOrderCommand}"
                Content="Edit Selected Order" />
            <Button
                Grid.Row="0"
                Grid.Column="3"
                Background="{StaticResource AppPrimaryTintBrush4}"
                BorderThickness="0"
                Command="{Binding OpenAddOrderWindowCommand}"
                Content="Generate Order"
                FontSize="16"
                FontWeight="Medium" />

            <!--<Button Grid.Row="0" Grid.Column="1" Content="Delete Selected Order" Command="{Binding DeleteCommand}" Margin="5" />-->
            <!--
            <Button Grid.Row="0" Grid.Column="1" Content="Delete Selected Order"  Margin="5" />
            -->
            <!--<Button Grid.Row="0" Grid.Column="2" Content="Edit Selected Order" Command="{Binding EditCommand}" Margin="5" />-->
            <!--
            <Button Grid.Row="0" Grid.Column="2" Content="Edit Selected Order"  Margin="5" />
            -->
            <!--<Button Grid.Row="0" Grid.Column="3" Content="Generate Order" FontWeight="Medium" Background="{StaticResource PrimaryTintBrush4}" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Center"  BorderThickness="0" Command="{Binding OpenAddWindowCommand}"/>-->
            <!--
            <Button Grid.Row="0" Grid.Column="3" Content="Generate Order" FontWeight="Medium" Background="{StaticResource PrimaryTintBrush4}" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Center"  BorderThickness="0" />-->


            <!--  ===================Row 1============================================  -->
            <!--  Card 1  -->
            <Border
                Grid.Row="1"
                Margin="10"
                Padding="6"
                Background="#FFFFFFFF"
                BorderBrush="#CCC"
                BorderThickness="0"
                CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.7"
                        ShadowDepth="2"
                        Color="#FFCFCFCF" />
                </Border.Effect>

                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="150" />
                    <TextBlock Text="Total Products" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  Card 2  -->
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                Padding="6"
                Background="#FFFFFFFF"
                BorderBrush="#CCC"
                BorderThickness="0"
                CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.7"
                        ShadowDepth="2"
                        Color="#FFCFCFCF" />
                </Border.Effect>

                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="100" />
                    <TextBlock Text="Product in stock" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  Card 3  -->
            <Border
                Grid.Row="1"
                Grid.Column="2"
                Margin="10"
                Padding="6"
                Background="#FFFFFFFF"
                BorderBrush="#CCC"
                BorderThickness="0"
                CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.7"
                        ShadowDepth="2"
                        Color="#FFCFCFCF" />
                </Border.Effect>

                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="50" />
                    <TextBlock Text="Product Out of stock" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  Card 4  -->
            <Border
                Grid.Row="1"
                Grid.Column="3"
                Margin="10"
                Padding="6"
                Background="#FFFFFFFF"
                BorderBrush="#CCC"
                BorderThickness="0"
                CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.7"
                        ShadowDepth="2"
                        Color="#FFCFCFCF" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="20" />
                    <TextBlock Text="Product Out of season" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  MouseDoubleClick="DataGrid_MouseDoubleClick"  -->
            <!--  ===================Row 3============================================  -->




            <DataGrid
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Margin="0,0,0,10"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True"
                ItemsSource="{Binding Orders}"
                SelectedItem="{Binding SelectedOrder, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding ID}"
                        Header="Order ID" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Date}"
                        Header="Date" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Customer.Name}"
                        Header="Customer" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding IsCompleted}"
                        Header="Completed" />
                    <DataGridTemplateColumn Width="Auto" Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Content="View Details" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Border>
</UserControl>
