<UserControl
    x:Class="TradeOps.View.UserControlView.OrderUserControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.UserControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="{materialDesign:MaterialDesignFont}"
    mc:Ignorable="d">
    <Border
        Padding="10"
        Background="white"
        CornerRadius="6">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="70" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <!--  ===================Row 1============================================  -->
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="32"
                Text="Orders" />

            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,0"
                Background="#ffffff"
                BorderBrush="#FF009688"
                Command="{Binding DeleteOrderCommand}"
                Content="Delete Order"
                Style="{StaticResource MaterialDesignPaperLightButton}" />



            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="10,0"
                Background="#ffffff"
                BorderBrush="#FF009688"
                Command="{Binding EditOrderCommand}"
                Content="Edit Selected Order"
                Style="{StaticResource MaterialDesignPaperLightButton}" />
            <Button
                Grid.Row="0"
                Grid.Column="3"
                Margin="10,0"
                Padding="30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                BorderThickness="0"
                Command="{Binding OpenAddOrderWindowCommand}"
                Content="Generate Order"
                FontSize="16"
                FontWeight="Medium"
                Style="{StaticResource MaterialDesignRaisedDarkButton}" />



            <!--  ===================Row 2============================================  -->
            <Grid
                Grid.Row="1"
                Grid.ColumnSpan="4"
                Margin="2,17"
                HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <!--  spacing  -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  ComboBox: Search by ID or Name  -->
                <ComboBox
                    Grid.Column="0"
                    Width="120"
                    Padding="5"
                    materialDesign:HintAssist.Hint="Search by"
                    SelectedValue="{Binding SearchType, Mode=TwoWay}"
                    SelectedValuePath="Content"
                    Style="{StaticResource MaterialDesignFilledComboBox}">
                    <ComboBoxItem Content="ID" />
                    <ComboBoxItem Content="Name" />
                    <ComboBoxItem Content="Date" />
                </ComboBox>
                <TextBox
                    Grid.Column="2"
                    Padding="5"
                    materialDesign:HintAssist.Hint="Enter search term"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <!--  ===================Row 3============================================  -->




            <DataGrid
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Margin="0,10"
                AutoGenerateColumns="False"
                BorderBrush="white"
                BorderThickness="1"
                CanUserAddRows="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                HorizontalGridLinesBrush="#10000000"
                IsReadOnly="True"
                ItemsSource="{Binding Orders}"
                RowBackground="white"
                SelectedItem="{Binding SelectedOrder, Mode=TwoWay}">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding ID}"
                        Header="Order ID" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Customer.Name}"
                        Header="Customer" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Date}"
                        Header="Bill" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Date}"
                        Header="Date" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding IsCompleted}"
                        Header="Completed" />
                    <DataGridTemplateColumn Width="Auto" Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Content="View Details" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Border>
</UserControl>
