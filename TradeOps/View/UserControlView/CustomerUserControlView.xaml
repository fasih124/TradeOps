<UserControl
    x:Class="TradeOps.View.UserControlView.CustomerUserControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.UserControlView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Margin="20"
        Padding="10"
        Background="{StaticResource BackgroundTintBrush7}"
        CornerRadius="6">
        <Grid Background="{StaticResource BackgroundTintBrush7}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  ===================Row 0============================================  -->
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="32"
                Text="Customer" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="5"
                Command="{Binding DeleteCommand}"
                Content="Delete Selected Customer" />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="5"
                Command="{Binding EditCommand}"
                Content="Edit Selected Customer" />
            <Button
                Grid.Row="0"
                Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="{StaticResource PrimaryTintBrush4}"
                BorderThickness="0"
                Command="{Binding OpenAddWindowCommand}"
                Content="Add Customer"
                FontSize="16"
                FontWeight="Medium" />
            <!--  ===================Row 1============================================  -->
            <!--  Card 1  -->
            <Border
                Grid.Row="1"
                Margin="10"
                Padding="6"
                Background="#FFFFFFFF"
                BorderBrush="#CCC"
                BorderThickness="0"
                CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.7"
                        ShadowDepth="2"
                        Color="#FFCFCFCF" />
                </Border.Effect>

                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="150" />
                    <TextBlock Text="Total Products" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  Card 2  -->
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                Padding="6"
                Background="#FFFFFFFF"
                BorderBrush="#CCC"
                BorderThickness="0"
                CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.7"
                        ShadowDepth="2"
                        Color="#FFCFCFCF" />
                </Border.Effect>

                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="100" />
                    <TextBlock Text="Product in stock" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  Card 3  -->
            <Border
                Grid.Row="1"
                Grid.Column="2"
                Margin="10"
                Padding="6"
                Background="#FFFFFFFF"
                BorderBrush="#CCC"
                BorderThickness="0"
                CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.7"
                        ShadowDepth="2"
                        Color="#FFCFCFCF" />
                </Border.Effect>

                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="50" />
                    <TextBlock Text="Product Out of stock" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  Card 4  -->
            <Border
                Grid.Row="1"
                Grid.Column="3"
                Margin="10"
                Padding="6"
                Background="#FFFFFFFF"
                BorderBrush="#CCC"
                BorderThickness="0"
                CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.7"
                        ShadowDepth="2"
                        Color="#FFCFCFCF" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="20" />
                    <TextBlock Text="Product Out of season" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <!--  MouseDoubleClick="DataGrid_MouseDoubleClick"  -->
            <!--  ===================Row 3============================================  -->


            <DataGrid
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Margin="0,10"
                AlternatingRowBackground="{StaticResource BackgroundTintBrush5}"
                AutoGenerateColumns="False"
                BorderBrush="{StaticResource BackgroundShadeBrush2}"
                BorderThickness="1"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding Customers}"
                RowBackground="{StaticResource BackgroundTintBrush7}"
                SelectedItem="{Binding SelectedCustomer}"
                SelectionMode="Single">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding ID}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Name}"
                        Header="Name" />
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Area}"
                        Header="Area" />
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Address}"
                        Header="Address" />
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding PhoneNumber}"
                        Header="Phone Number" />

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
