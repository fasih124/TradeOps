<UserControl
    x:Class="TradeOps.View.UserControlView.ProductUserControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.UserControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="{materialDesign:MaterialDesignFont}"
    mc:Ignorable="d">
    <Border
        Padding="10"
        Background="white"
        CornerRadius="6">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="70" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <!--  ===================Row 1============================================  -->
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="32"
                Text="Products" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,0"
                Background="#ffffff"
                BorderBrush="#FF009688"
                Command="{Binding DeleteCommand}"
                Content="Delete Selected Product"
                Style="{StaticResource MaterialDesignPaperLightButton}" />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="10,0"
                Background="#ffffff"
                BorderBrush="#FF009688"
                Command="{Binding EditCommand}"
                Content="Edit Selected Product"
                Style="{StaticResource MaterialDesignRaisedLightButton}" />
            <Button
                Grid.Row="0"
                Grid.Column="3"
                Margin="10,0"
                Padding="30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                BorderThickness="0"
                Command="{Binding OpenAddWindowCommand}"
                Content="Add Product"
                FontSize="16"
                FontWeight="Medium"
                Style="{StaticResource MaterialDesignRaisedDarkButton}" />
            <!--  ===================Row 2============================================  -->

            <Grid
                Grid.Row="1"
                Grid.ColumnSpan="4"
                Margin="2,17"
                HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <!--  spacing  -->
                    <ColumnDefinition Width="29*" />
                    <ColumnDefinition Width="617*" />
                </Grid.ColumnDefinitions>

                <!--  ComboBox: Search by ID or Name  -->
                <ComboBox
                    Grid.Column="0"
                    Width="120"
                    materialDesign:HintAssist.Hint="Search by"
                    SelectedValue="{Binding SearchType, Mode=TwoWay}"
                    SelectedValuePath="Content"
                    Style="{StaticResource MaterialDesignFilledComboBox}">
                    <ComboBoxItem Content="ID" />
                    <ComboBoxItem Content="Name" />
                </ComboBox>

                <!--  TextBox: Search input  -->
                <TextBox
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Padding="5"
                    materialDesign:HintAssist.Hint="Enter search term"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>


            <!--  ===================Row 3============================================  -->


            <DataGrid
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Margin="0,10"
                AutoGenerateColumns="False"
                BorderBrush="{StaticResource AppBackgroundShadeBrush2}"
                BorderThickness="1"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                HorizontalGridLinesBrush="#10000000"
                IsReadOnly="True"
                ItemsSource="{Binding Products}"
                RowBackground="white"
                SelectedItem="{Binding SelectedProduct}"
                SelectionMode="Single">
                <!--  AlternatingRowBackground="{StaticResource AppBackgroundTintBrush5}"  -->
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding ID}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="Name" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PurchasePrice}"
                        Header="Purchase Price" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SellingPrice}"
                        Header="Selling Price" />
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding ThresholdLevel}"
                        Header="Threshold" />
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding StockQuantity}"
                        Header="Stock" />
                    <DataGridCheckBoxColumn
                        Width="Auto"
                        Binding="{Binding IsTracked}"
                        Header="Tracked" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
