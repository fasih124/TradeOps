<UserControl x:Class="TradeOps.View.UserControlView.ProductUserControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TradeOps.View.UserControlView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Border Background="{StaticResource BackgroundTintBrush7}" CornerRadius="6" Margin="20" Padding="10">
    <Grid Background="{StaticResource BackgroundTintBrush7}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--===================Row 0============================================-->
        <TextBlock Text="Products" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Left" 
                 FontSize="32"/>

        <Button Grid.Row="0" Grid.Column="4" Content="Add Product" FontWeight="Medium" Background="{StaticResource PrimaryTintBrush4}" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Center" Command="{Binding AddProductCommand}" BorderThickness="0"/>
        <!--===================Row 1============================================-->
        <!--Card 1-->
        <Border 
              Grid.Row="1"
              Background="#FFFFFFFF" 
              CornerRadius="10" 
              Padding="6" 
              Margin="10" 
              BorderBrush="#CCC" 
              BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8"  ShadowDepth="2" Color="#FFCFCFCF" Opacity="0.7" />
            </Border.Effect>

            <StackPanel>
                <TextBlock  Text="150" FontSize="20" FontWeight="Bold" Margin="0,0,0,0"/>
                <TextBlock Text="Total Products" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        <!--Card 2-->
        <Border 
              Grid.Row="1"
              Grid.Column="1"
              Background="#FFFFFFFF" 
              CornerRadius="12" 
              Padding="6" 
              Margin="10" 
              BorderBrush="#CCC" 
              BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8"  ShadowDepth="2" Color="#FFCFCFCF" Opacity="0.7" />
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="100" FontSize="20" FontWeight="Bold" Margin="0,0,0,0"/>
                <TextBlock Text="Product in stock" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        <!--Card 3-->
        <Border  Grid.Row="1" Grid.Column="2"   Background="#FFFFFFFF"    CornerRadius="12"  Padding="6" Margin="10" BorderBrush="#CCC" BorderThickness="0" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="8"  ShadowDepth="2" Color="#FFCFCFCF" Opacity="0.7" />
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="50" FontSize="20" FontWeight="Bold" Margin="0,0,0,0"/>
                <TextBlock Text="Product Out of stock" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        <!--Card 4-->
        <Border 
                Grid.Row="1"  Grid.Column="3" Background="#FFFFFFFF" CornerRadius="12" Padding="6"  Margin="10" BorderBrush="#CCC" BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8"  ShadowDepth="2" Color="#FFCFCFCF" Opacity="0.7" />
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="20" FontSize="20" FontWeight="Bold" Margin="0,0,0,0"/>
                <TextBlock Text="Product Out of season" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
            <!--MouseDoubleClick="DataGrid_MouseDoubleClick"-->
            <!--===================Row 3============================================-->
        <DataGrid Grid.Row="2" Grid.ColumnSpan="4"
          ItemsSource="{Binding Products}"
          AutoGenerateColumns="False"
          Margin="10"
          IsReadOnly="True" SelectionMode="Single"
                SelectedItem="{Binding SelectedProduct, Mode=TwoWay}" >
           
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width=".7*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Purchase Price" Binding="{Binding PurchasePrice}" Width="*"/>
                <DataGridTextColumn Header="Selling Price" Binding="{Binding Sellingprice}" Width="*"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding ProductInventory.StockQuantity}" Width="*"/>
                <DataGridTextColumn Header="Threshold" Binding="{Binding ThresholdLevel}" Width="*"/>
                <DataGridCheckBoxColumn Header="Out of Season" Binding="{Binding IsOutOfSeason}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    </Border>
</UserControl>
