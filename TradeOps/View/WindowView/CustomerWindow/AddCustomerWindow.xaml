<Window
    x:Class="TradeOps.View.WindowView.CustomerWindow.AddCustomerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.WindowView.CustomerWindow"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Customer"
    Width="400"
    Height="450"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">

            <Label Content="{Binding Customer.ID}" FontSize="18" />


            <TextBox
                Margin="10"
                materialDesign:HintAssist.Hint="Name"
                FontSize="18"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding Customer.Name}" />


            <TextBox
                Margin="10"
                materialDesign:HintAssist.Hint="Area"
                FontSize="18"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding Customer.Area}" />


            <TextBox
                Margin="10"
                materialDesign:HintAssist.Hint="Shop Address"
                FontSize="18"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding Customer.Address}" />


            <TextBox
                Margin="10"
                materialDesign:HintAssist.Hint="Phone Number (03XX-XXXXXXX)"
                FontSize="18"
                PreviewTextInput="PhoneNumberOnly_PreviewTextInput"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding Customer.PhoneNumber}" />

            <Button
                Margin="10"
                Command="{Binding SaveCommand}"
                Content="Add"
                FontSize="18"
                Foreground="White" />
        </StackPanel>

    </Grid>
</Window>
