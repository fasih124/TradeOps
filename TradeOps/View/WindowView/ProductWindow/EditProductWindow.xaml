<Window
    x:Class="TradeOps.View.WindowView.EditProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.WindowView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Edit Product"
    Width="400"
    Height="500"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">

            <TextBox
                Margin="10"
                materialDesign:HintAssist.Hint="Name"
                FontSize="18"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding Product.Name}" />


            <TextBox
                Margin="10"
                materialDesign:HintAssist.Hint="Purchase Price"
                FontSize="18"
                LostFocus="TextBox_RestoreZeroIfEmpty"
                PreviewGotKeyboardFocus="TextBox_SelectAll_IfZero"
                PreviewTextInput="NumberOnly_PreviewTextInput"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding Product.PurchasePrice}" />

            <TextBox
                Margin="10"
                materialDesign:HintAssist.Hint="Selling Price"
                FontSize="18"
                LostFocus="TextBox_RestoreZeroIfEmpty"
                PreviewGotKeyboardFocus="TextBox_SelectAll_IfZero"
                PreviewTextInput="NumberOnly_PreviewTextInput"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding Product.SellingPrice}" />


            <TextBox
                Margin="10"
                materialDesign:HintAssist.Hint="Threshold Level"
                FontSize="18"
                LostFocus="TextBox_RestoreZeroIfEmpty"
                PreviewGotKeyboardFocus="TextBox_SelectAll_IfZero"
                PreviewTextInput="NumberOnly_PreviewTextInput"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding Product.ThresholdLevel}" />


            <TextBox
                Margin="10"
                materialDesign:HintAssist.Hint="Stock Quantity"
                FontSize="18"
                LostFocus="TextBox_RestoreZeroIfEmpty"
                PreviewGotKeyboardFocus="TextBox_SelectAll_IfZero"
                PreviewTextInput="NumberOnly_PreviewTextInput"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding Product.StockQuantity}" />

            <CheckBox
                Margin="10"
                Content="Is Tracked"
                FontSize="18"
                IsChecked="{Binding Product.IsTracked}" />

            <Button
                Margin="10"
                Command="{Binding SaveCommand}"
                Content="Save"
                FontSize="18"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
