<Window
    x:Class="TradeOps.View.WindowView.EditProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.WindowView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Edit Product"
    Width="300"
    Height="400"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name" />
            <TextBox Text="{Binding Product.Name}" />

            <TextBlock Text="Purchase Price" />
            <TextBox Text="{Binding Product.PurchasePrice}" />

            <TextBlock Text="Selling Price" />
            <TextBox Text="{Binding Product.SellingPrice}" />

            <TextBlock Text="Threshold Level" />
            <TextBox Text="{Binding Product.ThresholdLevel}" />

            <TextBlock Text="Stock Quantity" />
            <TextBox Text="{Binding Product.StockQuantity}" />

            <CheckBox Content="Is Tracked" IsChecked="{Binding Product.IsTracked}" />

            <Button
                Margin="0,10,0,0"
                Command="{Binding SaveCommand}"
                Content="Save" />
        </StackPanel>
    </Grid>
</Window>
