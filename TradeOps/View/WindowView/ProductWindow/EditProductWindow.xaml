<Window x:Class="TradeOps.View.WindowView.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeOps.View.WindowView"
        mc:Ignorable="d"
        Title="Edit Product" Height="400" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name" />
            <TextBox Text="{Binding Product.Name}" />

            <TextBlock Text="Purchase Price" />
            <TextBox Text="{Binding Product.PurchasePrice}" />

            <TextBlock Text="Selling Price" />
            <TextBox Text="{Binding Product.SellingPrice}" />

            <TextBlock Text="Threshold Level" />
            <TextBox Text="{Binding Product.ThresholdLevel}" />

            <TextBlock Text="Stock Quantity" />
            <TextBox Text="{Binding Product.StockQuantity}" />

            <CheckBox Content="Is Tracked" IsChecked="{Binding Product.IsTracked}" />

            <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
