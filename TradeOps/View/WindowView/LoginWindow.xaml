<Window
    x:Class="TradeOps.View.WindowView.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.WindowView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="800"
    Height="450"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Margin="0,-240,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="44"
            FontWeight="Bold"
            Text="Welcome to TradeOps" />
        <TextBlock
            Margin="0,-170,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Regular"
            Text="Enter Admin Password To Login" />

        <StackPanel
            Margin="0,100,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">


            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">


                <!--  Hidden PasswordBox  -->
                <PasswordBox
                    x:Name="PasswordBoxHidden"
                    Width="230"
                    Height="40"
                    Padding="5"
                    materialDesign:HintAssist.Hint="Password"
                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                    materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource PrimaryHueMidBrush}"
                    FontSize="18"
                    PasswordChanged="PasswordBoxHidden_PasswordChanged"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                    Visibility="Visible" />

                <!--  Visible TextBox for showing password  -->
                <TextBox
                    x:Name="PasswordBoxVisible"
                    Width="230"
                    Height="40"
                    Padding="5"
                    materialDesign:HintAssist.Hint="Password"
                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                    materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource PrimaryHueMidBrush}"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextChanged="PasswordBoxVisible_TextChanged"
                    Visibility="Collapsed" />

                <!--  Toggle show/hide button with eye icon  -->
                <Button
                    Width="50"
                    Height="40"
                    HorizontalAlignment="Right"
                    Background="LightGray"
                    BorderBrush="LightGray"
                    Click="TogglePasswordVisibility"
                    Foreground="White">
                    <materialDesign:PackIcon
                        x:Name="EyeIcon"
                        Width="20"
                        Height="20"
                        Kind="Eye" />
                </Button>
            </StackPanel>
            <!--<PasswordBox
                x:Name="PasswordInput"
                Width="250"
                Height="40"
                Margin="10"
                Padding="5"
                materialDesign:HintAssist.Hint="Password"
                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource PrimaryHueMidBrush}"
                FontSize="18"
                Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />-->
            <!--  Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />  -->

            <Button
                Width="280"
                Height="40"
                Margin="10"
                Click="Button_Click"
                Command="{Binding LoginCommand}"
                Content="Login"
                FontSize="18"
                FontWeight="Bold"
                Foreground="Beige"
                Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>

        <!--  Foreground="White"  -->
    </Grid>
</Window>
