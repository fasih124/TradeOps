<Window x:Class="TradeOps.View.WindowView.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeOps.View.WindowView"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Welcome to Trade Track" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-100,0,0"/>
        <TextBox HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Enter Password" VerticalAlignment="Center" Width="200" Height="30" VerticalContentAlignment="Center" BorderBrush="#393E46" Padding="5"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Center" Width="200" Height="30" Background="#00ADB5" FontWeight="Bold" FontSize="14" Click="Button_Click"/>

    </Grid>
</Window>
