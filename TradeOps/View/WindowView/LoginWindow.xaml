<Window
    x:Class="TradeOps.View.WindowView.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.WindowView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Margin="0,-100,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="40"
            FontWeight="Bold"
            Text="Welcome to Trade Track" />

        <StackPanel
            Margin="0,100,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <PasswordBox
                x:Name="PasswordInput"
                Width="200"
                Height="30"
                Margin="0,0,0,10"
                Padding="5"
                VerticalContentAlignment="Center"
                Background="White"
                BorderBrush="#393E46"
                Foreground="Black" />

            <Button
                Width="200"
                Height="30"
                Background="#00ADB5"
                Click="Button_Click"
                Content="Login"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>


    </Grid>
</Window>
