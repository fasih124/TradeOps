<Window
    x:Class="TradeOps.View.WindowView.DashboardWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.WindowView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DashboardWindowView"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.6*" />
            <ColumnDefinition Width="7.4*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource BackgroundTintBrush2}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Title  -->
                <RowDefinition Height="*" />
                <!--  Navigation Buttons  -->
                <RowDefinition Height="Auto" />
                <!--  Logout Button  -->
            </Grid.RowDefinitions>

            <StackPanel Margin="0,5,0,20">
                <Image
                    Width="50"
                    Height="50"
                    Margin="0,0,8,0"
                    Source="/Assets/Images/oultine_account_circle_64dp_222831(1).png" />
                <TextBlock
                    Grid.Row="0"
                    Margin="0"
                    Padding="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#393E46"
                    Text="Trade Track" />
                <Separator Margin="10,5,10,5" Background="#00ADB5" />
            </StackPanel>


            <StackPanel Grid.Row="1">


                <Grid Grid.Row="2" Margin="0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.ColumnSpan="2"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="{StaticResource BackgroundTintBrush2}"
                        BorderThickness="0"
                        Click="NavigationButton_Click"
                        FontSize="16"
                        FontWeight="Bold"
                        Tag="DashboardView">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Margin="0,0,8,0"
                                Source="/Assets/Images/oultine_receipt_64dp_222831(1).png" />
                            <TextBlock VerticalAlignment="Center" Text="Dashboard" />
                        </StackPanel>
                    </Button>

                </Grid>

                <Grid Grid.Row="2" Margin="0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.ColumnSpan="2"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="{StaticResource BackgroundTintBrush2}"
                        BorderThickness="0"
                        Click="NavigationButton_Click"
                        FontSize="16"
                        FontWeight="Bold"
                        Tag="OrderView">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Margin="0,0,8,0"
                                Source="/Assets/Images/oultine_receipt_64dp_222831(1).png" />
                            <TextBlock VerticalAlignment="Center" Text="Order" />
                        </StackPanel>
                    </Button>

                </Grid>

                <Grid Grid.Row="2" Margin="0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.ColumnSpan="2"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="{StaticResource BackgroundTintBrush2}"
                        BorderThickness="0"
                        Click="NavigationButton_Click"
                        FontSize="16"
                        FontWeight="Bold"
                        Tag="ProductView">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Margin="0,0,8,0"
                                Source="/Assets/Images/trolley_64dp_222831.png" />
                            <TextBlock VerticalAlignment="Center" Text="Product" />
                        </StackPanel>
                    </Button>

                </Grid>

                <Grid Grid.Row="2" Margin="0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.ColumnSpan="2"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="{StaticResource BackgroundTintBrush2}"
                        BorderThickness="0"
                        Click="NavigationButton_Click"
                        FontSize="16"
                        FontWeight="Bold"
                        Tag="CustomerView">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Margin="0,0,8,0"
                                Source="/Assets/Images/oultine_group_64dp_222831(1).png" />
                            <TextBlock VerticalAlignment="Center" Text="Customer" />
                        </StackPanel>
                    </Button>

                </Grid>
                <Grid Grid.Row="2" Margin="0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.ColumnSpan="2"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="{StaticResource BackgroundTintBrush2}"
                        BorderThickness="0"
                        Click="NavigationButton_Click"
                        FontSize="16"
                        FontWeight="Bold"
                        Tag="InvoicerView">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Margin="0,0,8,0"
                                Source="/Assets/Images/oultine_group_64dp_222831(1).png" />
                            <TextBlock VerticalAlignment="Center" Text="Invoice" />
                        </StackPanel>
                    </Button>

                </Grid>


            </StackPanel>

            <Grid Grid.Row="2" Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.ColumnSpan="2"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Background="{StaticResource BackgroundTintBrush2}"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="25"
                            Height="25"
                            Margin="0,0,8,0"
                            Source="/Assets/Images/logout_64dp_222831.png" />
                        <TextBlock VerticalAlignment="Center" Text="Exit" />
                    </StackPanel>
                </Button>

            </Grid>

        </Grid>

        <ContentControl Name="MainContent" Grid.Column="1" />
    </Grid>
</Window>
