<Window x:Class="TradeOps.View.WindowView.DashboardWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeOps.View.WindowView"
        mc:Ignorable="d"
        Title="DashboardWindowView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.6*"/>
            <ColumnDefinition Width="7.4*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="{StaticResource BackgroundTintBrush2}" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="*"/>
                <!-- Navigation Buttons -->
                <RowDefinition Height="Auto"/>
                <!-- Logout Button -->
            </Grid.RowDefinitions>

            <StackPanel Margin="0,5,0,40">
                <Image Source="/Assets/Images/oultine_account_circle_64dp_222831(1).png" Width="50" Height="50" Margin="0,0,8,0"/>
                <TextBlock  Grid.Row="0" Text="Trade Track" Foreground="#393E46" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0" Padding="5"/>
                <Separator Margin="10,5,10,5" Background="#00ADB5"/>
            </StackPanel>


            <StackPanel Grid.Row="1">


                <Grid Grid.Row="2" Margin="0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Click="NavigationButton_Click" Tag="OrderView"  Grid.ColumnSpan="2" Background="{StaticResource BackgroundTintBrush2}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="0" FontSize="16" Padding="10" FontWeight="Bold" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Images/oultine_receipt_64dp_222831(1).png" Width="25" Height="25" Margin="0,0,8,0"/>
                            <TextBlock Text="Order" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </Grid>

                <Grid Grid.Row="2" Margin="0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Click="NavigationButton_Click" Tag="ProductView" Grid.ColumnSpan="2" Background="{StaticResource BackgroundTintBrush2}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="0" FontSize="16" Padding="10" FontWeight="Bold" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Images/trolley_64dp_222831.png" Width="25" Height="25" Margin="0,0,8,0"/>
                            <TextBlock Text="Product" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </Grid>

                <Grid Grid.Row="2" Margin="0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Click="NavigationButton_Click" Tag="CustomerView"  Grid.ColumnSpan="2" Background="{StaticResource BackgroundTintBrush2}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="0" FontSize="16" Padding="10" FontWeight="Bold" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Images/oultine_group_64dp_222831(1).png" Width="25" Height="25" Margin="0,0,8,0"/>
                            <TextBlock Text="Customer" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </Grid>


            </StackPanel>

            <Grid Grid.Row="2" Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.ColumnSpan="2" Background="{StaticResource BackgroundTintBrush2}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   BorderThickness="0" FontSize="16" Padding="10" FontWeight="Bold" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Images/logout_64dp_222831.png" Width="25" Height="25" Margin="0,0,8,0"/>
                        <TextBlock Text="Exit" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </Grid>

        </Grid>

        <ContentControl Grid.Column="1" Name="MainContent"/>
    </Grid>
</Window>
