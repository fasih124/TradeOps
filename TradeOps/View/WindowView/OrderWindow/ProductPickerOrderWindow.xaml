<Window
    x:Class="TradeOps.View.WindowView.OrderWindow.ProductPickerOrderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.WindowView.OrderWindow"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProductPickerOrderWindow"
    Width="800"
    Height="450"
    FontFamily="{materialDesign:MaterialDesignFont}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="178*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            materialDesign:HintAssist.Hint="Search by name"
            FontSize="18"
            Style="{StaticResource MaterialDesignFilledTextBox}"
            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

        <DataGrid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Height="300"
            Margin="0,7,0,8"
            AutoGenerateColumns="False"
            FontSize="18"
            IsReadOnly="True"
            ItemsSource="{Binding FilteredProducts}"
            SelectedItem="{Binding SelectedProduct}"
            SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding SellingPrice}"
                    Header="Price" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding StockQuantity}"
                    Header="Stock" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="0,0,10,0"
                Click="Cancel_Click"
                Content="Cancel"
                FontSize="18"
                Foreground="White" />
            <Button
                Width="100"
                Click="Select_Click"
                Content="Select"
                FontSize="18"
                Foreground="White"
                IsEnabled="{Binding SelectedProduct}" />
        </StackPanel>
    </Grid>
</Window>
