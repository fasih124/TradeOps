<Window
    x:Class="TradeOps.View.WindowView.OrderWindow.DetailOrderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.WindowView.OrderWindow"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Order Details"
    Width="600"
    Height="400"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="{Binding customer.Name}" />
            <TextBlock Text="{Binding Date}" />
            <TextBlock
                Margin="0,10,0,0"
                FontWeight="Bold"
                Text="Order Items:" />

            <DataGrid
                Height="200"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding ProductDetails}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Product.Name}"
                        Header="Product" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Quantity}"
                        Header="Qty" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SubTotal}"
                        Header="SubTotal" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SubProfit}"
                        Header="SubProfit" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
