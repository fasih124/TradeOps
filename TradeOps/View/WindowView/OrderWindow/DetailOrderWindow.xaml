<Window
    x:Class="TradeOps.View.WindowView.OrderWindow.DetailOrderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOps.View.WindowView.OrderWindow"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Order Details"
    Width="600"
    Height="400"
    Background="White"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0">
            <TextBlock
                Margin="5"
                FontSize="18"
                FontWeight="Bold"
                Text="{Binding Customer.Name}" />

            <TextBlock
                Margin="5"
                FontSize="18"
                Text="{Binding Date}" />

        </StackPanel>



        <StackPanel Grid.Row="1">
            <TextBlock
                Margin="0,10"
                FontSize="18"
                FontWeight="Bold"
                Text="Order Items:" />
            <DataGrid
                VerticalAlignment="Stretch"
                AutoGenerateColumns="False"
                BorderBrush="white"
                BorderThickness="1"
                CanUserAddRows="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                HorizontalGridLinesBrush="#10000000"
                IsReadOnly="True"
                ItemsSource="{Binding ProductDetails}"
                RowBackground="white">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Product.Name}"
                        FontSize="18"
                        Header="Product" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Quantity}"
                        FontSize="18"
                        Header="Qty" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SubTotal}"
                        FontSize="18"
                        Header="SubTotal" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SubProfit}"
                        FontSize="18"
                        Header="SubProfit" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Border
            Grid.Row="2"
            Background="#f5f5f5"
            BorderBrush="Gray"
            BorderThickness="0,2,0,2">
            <StackPanel
                Grid.Row="2"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <TextBlock
                    Margin="5"
                    FontSize="18"
                    FontWeight="Medium"
                    Text="Total Price :" />

                <TextBlock
                    Margin="5"
                    FontSize="18"
                    FontWeight="Medium"
                    Text="{Binding TotalPrice}" />

                <TextBlock
                    Margin="5"
                    FontSize="18"
                    FontWeight="Medium"
                    Text="Total Profit :" />

                <TextBlock
                    Margin="5"
                    FontSize="18"
                    FontWeight="Medium"
                    Text="{Binding TotalProfit}" />

            </StackPanel>
        </Border>
    </Grid>
</Window>
